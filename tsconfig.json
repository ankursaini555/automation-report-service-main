{
    "compilerOptions": {
      "target": "ES6",
      "moduleResolution": "node",
      "module": "CommonJS",
      "outDir": "./dist",
      "strict": true,
      "types": ["jest"],
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true
  
    },
    "include": ["src/**/*", "src/**/*.yaml", "src/config/validationConfig.yaml"],
    "exclude": ["node_modules", "dist"]
  }